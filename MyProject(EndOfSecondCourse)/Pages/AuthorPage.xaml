<Page x:Class="MyProject_EndOfSecondCourse_.Pages.OptionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProject_EndOfSecondCourse_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptionsPage">

    <Grid Background="#0b0d12">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Source="/ImagesAndSprites/Locations/OptionsMenu.gif" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stretch="Fill"/>

        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Программа была разработата" Foreground="White" FontSize="14" Margin="3" FontFamily="Arial Black"/>
            <TextBlock Text="Студентом группы П-21" Foreground="White" FontSize="14" Margin="3" FontFamily="Arial Black"/>
            <TextBlock Text="Антоновым Игорем" Foreground="White" FontSize="14" Margin="3" FontFamily="Arial Black" />
             
        </StackPanel>
        <Button x:Name="GoBack" Content="Назад" Height="50" VerticalAlignment="Bottom" Grid.Column="1" Click="GoBack_Click"/>
    </Grid>
</Page>
