<Window x:Class="MyProject_EndOfSecondCourse_.Pages.PauseMenuGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject_EndOfSecondCourse_.Pages"
        mc:Ignorable="d"
        Title="Пауза" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/ImagesAndSprites/AppIcon.png">
    <Grid>
        
        <DockPanel Margin="3" LastChildFill="False" VerticalAlignment="Center">
            <TextBlock Text="Пауза" DockPanel.Dock="Top" FontFamily="Impact" FontSize="48" HorizontalAlignment="Center"/>
            <Button x:Name="Resume" Content="Возобновить" DockPanel.Dock="Top" Height="40" FontSize="20" Click="Resume_Click"/>
            <Button x:Name="BackToTheMainMenu" Content="Назад в главное меню" DockPanel.Dock="Top" Height="40" FontSize="20" Click="BackToTheMainMenu_Click"/>
        </DockPanel>
        
    </Grid>
</Window>
