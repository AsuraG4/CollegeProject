<Page x:Class="MyProject_EndOfSecondCourse_.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProject_EndOfSecondCourse_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/ImagesAndSprites/Locations/MainMenu.jpg" />
        </Grid.Background>
        <DockPanel>

            <TextBlock Text="The Greates Quest 2" FontFamily="Ink Free" FontSize="32" FontWeight="DemiBold" Margin="30" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <StackPanel VerticalAlignment="Center" DockPanel.Dock="Bottom">

                <Button x:Name="NewGame" Content="Новая Игра" FontSize="16"  Height="40" Width="250" Click="NewGame_Click"/>
                <Button x:Name="Author" Content="Разработчик" FontSize="16"  Height="40" Width="250" Click="Author_Click"/>
                <Button x:Name="Exit" Content="Выход" FontSize="16"  Height="40" Width="250" Click="Exit_Click"/>

            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
